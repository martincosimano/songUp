<%- include('partials/header') -%>

<div class="container-general">
  <main>
    <div class="row justify-content-center align-items-center h-100">
      <div class="col-lg-6 col-md-12 px-4 content-container h-100 mt-5">
        <div class="card">
          <div class="card-header d-flex flex-column justify-content-center align-items-baseline gap-1 mb-1 mt-3">
            <div class="d-flex justify-content-center back-bg"><a href="/"></a></div>
            <h1 class="card-title text-center w-100 mt-1">Log in to Sound UP</h1>
          </div>
          <div class="card-body">
            <form action="/login" method="POST">
              <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" placeholder="example@email.com" aria-describedby="emailHelp" name="email" value="test@testaccount.com">
              </div>
              <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1" placeholder="password" name="password" value="testaccount">
              </div>
              <div class="d-flex justify-content-center">
                <button type="submit" class="login-register-btn btn mt-4 mb-2 btn-new">Log In</button>
              </div>
            </form>
            <hr>
            <p class="card-text text-center mb-0 text-light">You can use the test account, just press Log In</p>
            <p class="card-text text-center"><a href="/signup" class="link">Want to create an account? Sign up</a></p>
          </div>
        </div>
        <% if (locals.messages.errors) { %>
          <% messages.errors.forEach( el => { %>
              <div class="alert alert-danger"><%= el.msg %></div>
          <% }) %>
      <% } %>
      </div>
    </div>
  </main>
</div>


<%- include('partials/footer') -%>
