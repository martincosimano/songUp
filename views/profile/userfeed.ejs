<%- include('../partials/header') -%>
<%- include('../partials/navbar') -%>
<div class="container-general">
  <main>
    <div class="row justify-content-center align-center feed-container">
        <% for(var i=0; i<posts.length; i++) {%>
          <div class="col-lg-4 col-md-6 col-sm-10 px-4 mb-3 content-container">
            <div class="card">
              <div class="card-body text-center">
                <p>Shared by:</p>
                <a href="/profile/<%= posts[i].user._id%>" class="feed-username">
                  <p class="username"><%= posts[i].userName %></p>
                </a>
                <iframe src="https://open.spotify.com/embed/track/<%= posts[i].spotifyTrackId %>" width="100%" height="380" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
                <div class="d-flex justify-content-center">
                  <button class="btn btn-new">
                      <a class="post-visit" href="/post/<%= posts[i]._id %>">View Post</a>
                  </button>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      </div>
      <nav>
        <ul class="pagination justify-content-center">
          <% if (currentPage > 1) { %>
            <li class="page-item">
              <a class="page-link" href="?page=<%= currentPage - 1 %>" tabindex="-1">Previous</a>
            </li>
          <% } %>
          <% for (var i = 1; i <= pageCount; i++) { %>
            <li class="page-item <% if (i === currentPage) { %>active<% } %>">
              <a class="page-link" href="?page=<%= i %>"><%= i %></a>
            </li>
          <% } %>
          <% if (currentPage < pageCount) { %>
            <li class="page-item">
              <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
            </li>
          <% } %>
        </ul>
      </nav>
  </main>
</div>
<%- include('../partials/footer') -%>