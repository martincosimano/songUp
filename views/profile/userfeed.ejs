<%- include('../partials/header') -%>
<%- include('../partials/navbar', { activePage: 'post' }) -%>
<div class="container-general">
  <main class="mt-3">
    <div class="row justify-content-center align-center">
        <% for(var i=0; i<posts.length; i++) {%>
          <div class="col-lg-6 col-md-12 px-3 mb-3 content-container pb-0">
            <div class="card">
              <div class="card-body text-center">
                <h2 class="h2-feed py-1">Created by</h2>
                <div class="d-flex justify-content-center">
                  <a href="/profile/<%= posts[i].user._id%>" class="username-feed mb-3"><%= posts[i].userName %></a>
                </div>
                <iframe src="https://open.spotify.com/embed/track/<%= posts[i].spotifyTrackId %>" width="90%" height="380" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
                <div class="d-flex justify-content-center mb-1">
                    <a class="btn-new" href="/post/<%= posts[i]._id %>">View Post</a>
                </div>
              </div>
            </div>
          </div>
        <% } %>
      </div>
      <nav class="py-3">
        <ul class="pagination justify-content-center">
          <% if (currentPage > 1) { %>
            <li class="page-item">
              <a class="page-link" href="?page=<%= currentPage - 1 %>" tabindex="-1">Previous</a>
            </li>
          <% } %>
          <% for (var i = 1; i <= pageCount; i++) { %>
            <li class="page-item <% if (i === currentPage) { %>active<% } %>">
              <a class="page-link" href="?page=<%= i %>"><%= i %></a>
            </li>
          <% } %>
          <% if (currentPage < pageCount) { %>
            <li class="page-item">
              <a class="page-link" href="?page=<%= currentPage + 1 %>">Next</a>
            </li>
          <% } %>
        </ul>
      </nav>
  </main>
</div>
<%- include('../partials/footer') -%>