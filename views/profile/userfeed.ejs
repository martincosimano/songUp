<%- include('../partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <ul class="list-unstyled d-flex flex-wrap">
      <% for(var i=0; i<posts.length; i++) {%>
        <li class="col-md-6 col-lg-4 mt-5">
          <div class="card">
            <div class="card-body">
              <a href="/post/<%= posts[i]._id%>">
                <h1 class="card-title"><%= posts[i].title %></h1>
              </a>
              <iframe src="https://open.spotify.com/embed/track/<%= posts[i].spotifyTrackId %>" width="100%" height="380" frameborder="0" allowtransparency="true" allow="encrypted-media"></iframe>
            </div>
          </div>
        </li>
      <% } %>
    </ul>
  </div>
</div>
<%- include('../partials/footer') -%>